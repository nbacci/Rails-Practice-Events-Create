<%= form_for @events, html:{class:"form-horizontal"} do |f| %>

<table class="table">
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :requires_id %>
    <%= f.check_box :requires_id %>
  </div>

  <div class="form-group">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>

  <div class="form-group">
    <%= f.label :directions %>
    <%= f.text_area :directions %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
</table>
<% end %>
